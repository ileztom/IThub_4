{
  "info": {
    "name": "Todo API",
    "_postman_id": "c5a9b050-1234-4a8a-bbbb-abcdef123456",
    "description": "Коллекция для тестирования REST API списка задач (Todo List).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Создать задачу",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Купить продукты\",\n  \"description\": \"Молоко, хлеб, яйца\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["tasks"]
        }
      },
      "response": []
    },
    {
      "name": "Получить список всех задач",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["tasks"]
        }
      },
      "response": []
    },
    {
      "name": "Получить список задач (completed=true)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/tasks?completed=true",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["tasks"],
          "query": [
            {
              "key": "completed",
              "value": "true"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Получить задачу по ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/tasks/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["tasks", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Обновить задачу",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Купить продукты и напитки\",\n  \"completed\": true\n}"
        },
        "url": {
          "raw": "http://localhost:8080/tasks/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["tasks", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Удалить задачу",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:8080/tasks/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["tasks", "1"]
        }
      },
      "response": []
    }
  ]
}
