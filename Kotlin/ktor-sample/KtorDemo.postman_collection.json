{
  "info": {
    "name": "Ktor Demo API",
    "_postman_id": "e8e616e0-d894-4936-a3f5-391682ee794c",
    "description": "Postman collection for testing Ktor server with CRUD and JWT auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"John\",\"email\":\"john@example.com\",\"password\":\"secret\"}"
        },
        "url": {
          "raw": "http://localhost:8080/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["users"]
        },
        "description": "Creates a new user"
      },
      "response": []
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const response = pm.response.json();",
              "if (response.token) {",
              "    pm.collectionVariables.set('jwt_token', response.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"john@example.com\",\"password\":\"secret\"}"
        },
        "url": {
          "raw": "http://localhost:8080/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["login"]
        },
        "description": "Logs in and saves JWT token to variable"
      },
      "response": []
    },
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/users?email=john@example.com",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["users"],
          "query": [
            {
              "key": "email",
              "value": "john@example.com"
            }
          ]
        },
        "description": "Gets all users with optional email filter"
      },
      "response": []
    },
    {
      "name": "Get User by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/users/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["users", "1"]
        },
        "description": "Gets a user by ID"
      },
      "response": []
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/users/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["users", "1"]
        },
        "description": "Deletes a user by ID"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "jwt_token",
      "value": ""
    }
  ]
}